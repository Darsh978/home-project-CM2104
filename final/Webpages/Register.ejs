<!DOCTYPE html>
<html>
  <head>
    <title>Account</title>
     <!--Common Head for All Pages-->
    <%- include('./partial/head') %>
    
  </head>
  <header>  
     <!--Common Header for All Pages-->
    <%- include('./partial/header') %>
  </header>
  <body>
    <!--Main Body for Login Page-->
    <div class="main-container">
        <!--Breadcrumbs to help navigate to previous page-->
        <div class="breadcrumb">
            <a href="/">Home</a> >
            <a href="/Login">Login</a>
        </div>
        <div class="main wrapper clearfix">

             <!-- Text -->
             <section class="PictureSettings" id="picSetting1">
                <h2 id='transitionText'>ACCOUNT REGISTRATION</h2>
            </section>
           
             <!-- left section for Register Page -->
            <article>
                <h2>Create Account</h2>
                <br>
                <fieldset id="DNLogin">

                    <form action="/adduser" method="POST">
                        <!-- <h3>Personal Information</h3> -->
                        <label for="fname">First Name*</label> <br>
                        <input class="DNinput" type="text" id="fname" name="fname" placeholder="Your Name..."> <br> <br>
                        <label for="lname">Last Name*</label> <br>
                        <input class="DNinput" type="text" id="lname" name="lname" placeholder="Your Last Name..."> <br>
                        <br>

                        <!-- Ask user for  Account Creation -->
                        <label for="email">Email*</label> <br>
                        <input class="DNinput" type="text" id="email" name="email" placeholder="Your Email..."> <br>
                        <br>
                        <label for="password">Password*</label> <br>
                        <input class="DNinput" type="password" id="password" name="password"
                            placeholder="Your Password..."> <br> <br>
                        <label for="confirm password">Confirm Password*</label> <br>
                        <input class="DNinput" type="password" id="password" name="password"
                            placeholder="Re-enter your Password..."> <br> <br>
                        <!-- <a href="#" class="DNbutton">FINISH</a> -->
                        <input class="DNbutton" type="submit" value="FINISH">
                    </form>
                </fieldset>
                <br> <br> <br> <br>


            </article>

            

        </div> <!-- #main -->
    </div> <!-- #main-container -->


     

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.11.2.min.js"><\/script>')</script>

    <script src="js/Login.js"></script>
    
  </body>
  
   <!--Common Footer for All Pages-->
  <footer class = "footer">
    <%- include('./partial/footer') %>
  </footer> 
</html>
